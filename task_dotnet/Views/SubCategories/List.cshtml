@{
}

@model IEnumerable<task_dotnet.Models.Entities.SubCategory>

<h1>SubCategories List</h1>

<table class="table">
    <thead>
        <tr>
            <th>SubCategory Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subCategory in Model)
        {
            <tr>
                <td>@subCategory.SubCategoryName</td>
                <td>@subCategory.Category?.CategoryName</td>
                <td>
                    <a asp-controller="SubCategories" asp-action="Edit" asp-route-id="@subCategory.Id">Edit</a> |
                    <form asp-controller="SubCategories" asp-action="Delete" asp-route-id="@subCategory.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to delete this subcategory?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-controller="SubCategories" asp-action="Add">Add SubCategory</a>
</div>
