@{
}


@model task_dotnet.Models.AddSubCategoryViewModel

<h1>Add SubCategory</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">SubCategory Name</label>
        <input type="text" class="form-control" asp-for="SubCategoryName" />
    </div>
    <div class="mt-3">
        <label class="form-label">Category</label>
        <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CategoryName"))"></select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <div>
        <a class="btn btn-primary" asp-controller="SubCategories" asp-action="List">Return</a>
    </div>
</form>
