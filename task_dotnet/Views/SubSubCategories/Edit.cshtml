@{
}


@model task_dotnet.Models.Entities.SubSubCategory

<h1>Edit SubSubCategory</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">SubSubCategory Name</label>
        <input type="text" class="form-control" asp-for="SubSubCategoryName" placeholder="Enter sub-subcategory name" required />
    </div>
    <div class="mt-3">
        <label class="form-label">SubCategory</label>
        <select class="form-control" asp-for="SubCategoryId" asp-items="@(new SelectList(ViewBag.SubCategories, "Id", "SubCategoryName"))"></select>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <div>
        <a class="btn btn-primary" asp-controller="SubSubCategories" asp-action="List">Return</a>
    </div>
</form>
